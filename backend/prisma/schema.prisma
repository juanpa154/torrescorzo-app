generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"  // âœ… Recomendado
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   @default("viewer")
  createdAt DateTime @default(now())

  announcements Announcement[]
}


model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  position  String
  location  String?
  agency    String
  createdAt DateTime @default(now())
}

model Agency {
  id    Int    @id @default(autoincrement())
  name  String @unique
}

model Location {
  id    Int    @id @default(autoincrement())
  name  String @unique
}

